<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<h3>Comments (<%= @article.comments.length %>)</h3>
<%= render partial: "articles/comment",
           collection: @article.comments.reverse %>

<%= render partial: "comments/form" %>

<%= link_to "Back to Articles List",
            articles_path %>

<%= link_to "Edit", edit_article_path(@article)%>

<%= link_to "Delete",
            article_path(@article),
            method: :delete,
            :data => {:confirm => "Are You Sure?"} %> 
